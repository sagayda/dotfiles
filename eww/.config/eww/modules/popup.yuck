(defwindow icon-popup [icon]
  :monitor 0
  :exclusive false 
  :stacking "overlay"
  :namespace "eww-popup"
  :focusable false
  :geometry (geometry 
             :width "6%"
             :height "8%"
             :anchor "bottom center"
             :x 0 
             :y 30)
  (label :class "icon"
         :justify "left"
         :show-truncated false
         :text {icon}))
